        \useasboundingbox[fill=innovensoWhite](0,0) rectangle(\the\paperwidth,1.1cm);
        \draw[black] (1cm,0) -- (\linewidth-1cm,0);

        \ifx\insertframesubtitle\@empty%
            {\node[anchor=west,innovensoBlack,font=\large,inner sep=0,text width=\the\paperwidth - 55mm] at (1cm,5mm){\usebeamerfont{frametitle}\insertframetitle};}
        \else%
            {\node[anchor= west,innovensoBlack, inner sep=0,text width=\the\paperwidth - 55mm] at (1cm,7.5mm){\usebeamerfont{frametitle}\insertframetitle};%
            \node[anchor= west,innovensoBlack, inner sep=0,text width=\the\paperwidth - 55mm] at (1cm,3mm){\usebeamerfont{framesubtitle}\insertframesubtitle};}%
